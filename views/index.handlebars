<div class="container center-align">
		<div class="d-flex justify-content-center">
		<img src="/assets/img/burger-chan.png" alt="burger chan" id="burger-pic">
		</div>
</div>

<div class='text-center' >
    <h1 id="burger-title">Eat Your Burger NYA!</h1>
</div>

<div class='text-center' id="add-burger-div">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="bu" name="name">
    <button id="submit">Add Burger</button>
  </div>

  
</form>

</div>
<div class="row" id="lists-div">

<div class="col 4">
<h2 class="text-center">Burgers to Munchy munch</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>

<div class="col 4">
<h2 class="text-center">Munched Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>